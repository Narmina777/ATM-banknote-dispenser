using System;

public static class ATM
{
    public static int GetLargestBanknote(int amount)
    {
        // You used arrays arrays from future topics, it is OK.
        int[] banknotes = { 1, 5, 10, 20, 50, 100, 200 };
        
        // Thanks to array you can do very nice solution via loop, instead of a number 'if' blocks with return.
        for (int i = banknotes.Length - 1; i >= 0; i--)
        {
            if (amount >= banknotes[i])
            {
                return banknotes[i];
            }
        }
        
        return 0;
    }
}

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("Enter the amount you want to withdraw:");
        
        // WOW, you used TryParse method with out parameter, this is rather advanced topic of futher lession. 
        if (int.TryParse(Console.ReadLine(), out int amount))
        {
            if (amount < 0)
            {
                Console.WriteLine("Invalid amount entered.");
            }
            else if (amount == 0)
            {
                Console.WriteLine("No banknotes to dispense.");
            }
            else
            {
                Console.WriteLine("Banknotes to dispense:");
                while (amount > 0)
                {
                    int banknote = ATM.GetLargestBanknote(amount);
                    
                    // And this way of string interpolationis also rather advanced. Hope you got the idea of it.
                    // We will review it during futher lessons any way.
                    Console.Write("{0} ", banknote);
                    amount -= banknote;
                }
            }
        }
        else
        {
            Console.WriteLine("Invalid input entered.");
        }
    }
}
